<div class='move-bottom'>
  <div class="photo-view">
    <div class="col-lg-12">
      <h4 class="page-header"><%= @photo.tag_line %>
        <p class="owner_info">
          <span class="pull-left">
            <b>Owner: </b> <%= @photo.owner.full_name %>
          </span>
          <span class="pull-left">
            <b>Created at: </b> <%= @photo.created_at %>
          </span>
          <% if @photo.owner == current_user %>
              <span>
              <%= link_to edit_album_photo_path(@photo.album, @photo), remote: true do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  Edit
              <% end %>
                </span>
              <span>
              <%= link_to album_photo_path(@photo.album, @photo), method: :delete, data: {confirm: 'Are you sure?'}, remote: true do %>
                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                  Delete
              <% end %>
              </span>
          <% end %>
        </p>
      </h4>
    </div>

    <div class="col-lg-12 image-view">
      <%= image_tag @photo.image %>
    </div>
  </div>
</div>