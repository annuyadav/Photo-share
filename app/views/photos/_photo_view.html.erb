<div class="col-md-3 sheet-block">
  <div class="single_sheet ">
    <div class="content">
      <div class="panel panel-default ">
        <%= link_to([photo.album, photo], class: 'hidden_link') do %>
            <div class="vertical-outer">
              <%= image_tag photo.image %>
            </div>
        <% end %>
        <div class='photo-detail'>
          <% if photo.owner == current_user %>
              <%= link_to edit_album_photo_path(photo.album, photo), class: 'pull-left', remote: true do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
              <%= link_to album_photo_path(photo.album, photo), method: :delete, class: 'pull-left', data: {confirm: 'Are you sure?'}, remote: true do %>
                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              <% end %>
          <% end %>
          <p class="col-md-8 sheet-name pull-right text-right">
            <%= photo.tag_line %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>