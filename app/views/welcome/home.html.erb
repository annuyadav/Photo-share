<div class='move-bottom'>
  <div class="col-lg-12">
    <h2 class="page-header">Welcome to Photo Share</h2>
  </div>
  <div class="row">
    <% if @photos.count.zero? %>
        <div class="text-center no_album">
          <div class="col-md-12">
               <span class="glyphicon glyphicon-camera" aria-hidden="true"></span>
                <i class="fa fa-file-pdf-o"></i>
                <h4><b>No photo available on site.</b></h4>
          </div>
          <br class="clearfix">
        </div>
    <% else %>
        <%= render partial: 'photos/photo_view', collection: @photos, as: :photo %>
    <% end %>
  </div>
</div>